<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mnrr.instaquizgui" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".LoginActivity" >
        </activity>
        <activity
            android:name=".PublishActivity"
            android:label="@string/title_activity_publish" >
        </activity>
        <activity
            android:name=".CreateQuizActivity"
            android:label="@string/title_activity_create_quiz" >
        </activity>
        <activity
            android:name=".AnswerActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_answer" >
        </activity>
        <activity
            android:name=".GetQuizActivity"
            android:label="@string/title_activity_get_quiz" >
        </activity>
        <activity
            android:name=".GetStatsActivity"
            android:label="@string/title_activity_get_stats" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="Sign Up" >
        </activity>
        <activity
            android:name=".TopicsActivity"
            android:label="@string/title_activity_polls" >
        </activity>
        <activity
            android:name=".PollsActivity"
            android:label="@string/title_activity_polls" >
        </activity>
        <activity
            android:name=".AddPollsActivity"
            android:label="@string/title_activity_add_polls" >
        </activity>
        <activity
            android:name=".UpvotePollActivity"
            android:label="@string/title_activity_upvote_poll" >
        </activity>
    </application>

</manifest>
